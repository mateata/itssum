<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/home_toolbar"
        layout="@layout/home_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:background="@color/MainColor">

        <TextView
            android:id="@+id/home_desc_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="24dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/home_desc_market" />

        <TextView
            android:id="@+id/home_desc_noon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="24dp"
            android:textSize="12dp"
            android:text="@string/home_desc_noon" />

        <ImageView
            android:id="@+id/home_desc_temp"
            android:layout_width="324dp"
            android:layout_height="96dp"
            android:layout_margin="18dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/home_desc_temp"/>

        <TextView
            android:id="@+id/home_desc_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/home_desc_good" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="left|bottom">

        <TextView
            android:id="@+id/cate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/market_category_name" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/table_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/tap_bottom_margin"
        android:padding="10dp"
        android:gravity="center"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="20dp"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/nature_button"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/nature_btn"/>

        <Button
            android:id="@+id/process_button"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/process_btn"/>

        <Button
            android:id="@+id/indust_button"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/indust_btn"/>

        <Button
            android:id="@+id/dining_button"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/dining_btn"/>
    </GridLayout>



</LinearLayout>