<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <include
        android:id="@+id/menu_toolbar"
        layout="@layout/main_toolbar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/calc_margin"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="연수구"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/text_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            tools:text="10%"
            android:textSize="24dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/calc_margin"
        android:layout_marginRight="@dimen/calc_margin"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_val"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/White"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="40dp"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:singleLine="true"
            tools:text="75,000"
            android:textSize="28sp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:layout_alignParentRight="true"
            android:text="원"
            android:textSize="28sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/sale_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/calc_margin"
        android:layout_marginRight="@dimen/calc_margin"
        android:layout_marginTop="30dp"
        android:background="@drawable/saleadd"/>

    <GridLayout
        android:id="@+id/calc_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/calc_margin"
        android:layout_marginRight="@dimen/calc_margin"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/tap_bottom_margin"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:id="@+id/calc_7"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:background="@drawable/calc_7"/>
        <Button
            android:id="@+id/calc_8"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:background="@drawable/calc_8"/>
        <Button
            android:id="@+id/calc_9"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:background="@drawable/calc_9"/>
        <Button
            android:id="@+id/calc_x"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:background="@drawable/calc_x"/>

        <Button
            android:id="@+id/calc_4"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_4"/>
        <Button
            android:id="@+id/calc_5"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_5"/>
        <Button
            android:id="@+id/calc_6"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_6"/>
        <Button
            android:id="@+id/calc_minus"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_minus"/>

        <Button
            android:id="@+id/calc_1"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_1"/>
        <Button
            android:id="@+id/calc_2"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_2"/>
        <Button
            android:id="@+id/calc_3"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_3"/>
        <Button
            android:id="@+id/calc_plus"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_plus"/>

        <Button
            android:id="@+id/calc_0"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_0"/>
        <Button
            android:id="@+id/calc_per"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_per"/>
        <Button
            android:id="@+id/calc_c"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_c"/>
        <Button
            android:id="@+id/calc_equal"
            android:layout_width="@dimen/calc_btn_size"
            android:layout_height="@dimen/calc_btn_size"
            android:layout_marginLeft="@dimen/calc_btn_space"
            android:layout_marginTop="@dimen/calc_btn_space"
            android:background="@drawable/calc_equal"/>
    </GridLayout>
    <TextView
        android:id="@+id/tv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:text="10%"
        android:textSize="12dp"
        android:visibility="invisible"/>
</LinearLayout>